rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // User's workouts subcollection
      match /workouts/{workoutId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's exercises subcollection
      match /exercises/{exerciseId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's personal records subcollection
      match /personalRecords/{recordId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's programs subcollection
      match /programs/{programId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Global exercises library (read-only for all authenticated users)
    match /exercisesLibrary/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via backend
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

